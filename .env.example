# ======================================================
# CONFIGURATION SUPABASE
# ======================================================

# URL de l'API Supabase (ne pas modifier)
VITE_SUPABASE_URL=https://sxrofrdhpzpjqkplgoij.supabase.co
# Pour Expo (dupliqué pour la compatibilité)
EXPO_PUBLIC_SUPABASE_URL=https://sxrofrdhpzpjqkplgoij.supabase.co

# Clé anonyme de l'API Supabase (remplacer par votre clé)
# ATTENTION: Ne jamais exposer la clé de service, uniquement la clé anon
VITE_SUPABASE_ANON_KEY=votre_cle_anonyme_ici
# Pour Expo (dupliqué pour la compatibilité)
EXPO_PUBLIC_SUPABASE_ANON_KEY=votre_cle_anonyme_ici

# ======================================================
# CONFIGURATION BASE DE DONNÉES (UNIQUEMENT POUR MIGRATIONS)
# ======================================================

# URL de connexion à la base de données PostgreSQL
# ATTENTION: Ne jamais exposer ces informations dans le code client
# Utilisez uniquement pour les migrations et les scripts côté serveur
DATABASE_URL=postgresql://postgres:[MOT_DE_PASSE_SECURISE]@db.sxrofrdhpzpjqkplgoij.supabase.co:5432/postgres

# Configuration pour les migrations Supabase
SUPABASE_DB_URL=postgresql://postgres:[MOT_DE_PASSE_SECURISE]@db.sxrofrdhpzpjqkplgoij.supabase.co:5432/postgres
SUPABASE_DB_PASSWORD=[MOT_DE_PASSE_SECURISE]

# ======================================================
# CONFIGURATION KKIAPAY
# ======================================================

# Kkiapay Public Key (sandbox ou production)
# Utilisez une clé de sandbox pour les environnements de développement
VITE_KKIAPAY_PUBLIC_KEY=votre_cle_publique_kkiapay
EXPO_PUBLIC_KKIAPAY_PUBLIC_KEY=votre_cle_publique_kkiapay

# Kkiapay Private Key (uniquement côté backend)
# ATTENTION: Ne jamais exposer cette clé dans le code client
# À utiliser uniquement dans les fonctions Edge ou côté serveur
KKIAPAY_PRIVATE_KEY=votre_cle_privee_kkiapay
KKIAPAY_SECRET=votre_secret_kkiapay

# ======================================================
# CONFIGURATION SUPPLÉMENTAIRE
# ======================================================

# Environnement (development, production)
NODE_ENV=development

# Timeout pour les requêtes API (en millisecondes)
VITE_API_TIMEOUT=30000

# Taille maximale des fichiers uploadés (en octets, 5MB par défaut)
VITE_MAX_UPLOAD_SIZE=5242880

# ======================================================
# CONFIGURATION EMAILS (pour les notifications)
# ======================================================

SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=votre_utilisateur_smtp
SMTP_PASSWORD=votre_mot_de_passe_smtp
SMTP_FROM=noreply@floservice.com
